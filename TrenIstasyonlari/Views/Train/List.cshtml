                                                        <!--end::Input-->
                                                    </div>
                                                    <div class="fv-row mb-7">
                                                        <!--begin::Label-->
                                                        <label class="required fw-bold fs-6 mb-2">Istasyon Adres</label>
                                                        <!--end::Label-->
                                                        <!--begin::Input-->
                                                        <input type="text" name="IstasyonAdres" class="form-control form-control-solid mb-3 mb-lg-0" value="@item.IstasyonAdres" />
                                                        <!--end::Input-->
                                                    </div>
                                                    <div class="fv-row mb-7">
                                                        <!--begin::Label-->
                                                        <label class="required fw-bold fs-6 mb-2">Istasyon Konum</label>
                                                        <!--end::Label-->
                                                        <!--begin::Input-->
                                                        <input type="text" name="IstasyonKonum" class="form-control form-control-solid mb-3 mb-lg-0" value="@item.IstasyonKonum" />
                                                        <!--end::Input-->
                                                    </div>
                                                    <!--end::Input group-->

                                                </div>
                                                <!--end::Scroll-->
                                                <!--begin::Actions-->
                                                <div class="text-center pt-15">
                                                    <button type="reset" class="btn btn-light me-3" data-kt-users-modal-action="cancel">Vazgeç</button>
                                                    <button onclick="Edit(@item.IstasyonID)" class="btn btn-primary" data-kt-users-modal-action="submit">
                                                        <span class="indicator-label">Kaydet</span>
                                                        <span class="indicator-progress">
                                                            Lütfen Bekleyin...
                                                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                                        </span>
                                                    </button>
                                                </div>
                                                <!--end::Actions-->
                                            </form>
                                            <!--end::Form-->
                                        </div>
                                        <!--end::Modal body-->
                                    </div>
                                    <!--end::Modal content-->
                                </div>
                                <!--end::Modal dialog-->
                            </div>
                            id++;
                        }
                    </tbody>
                    <!--end::Table body-->
                </table>
                <!--end::Table-->
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>

@section scripts{
    <script src="~/assets/js/custom/apps/user-management/users/list/table.js"></script>
    <script src="~/assets/js/custom/apps/user-management/users/list/export-users.js"></script>
    <script src="~/assets/js/custom/apps/user-management/users/list/add.js"></script>
    <script>
        function Delete(id) {
            Swal.fire({
                title: "Emin misiniz",
                text: "Bu Istasyonu Silmeyi Onaylıyormusunuz?Bu Islem Istasyona Bağlı Olan Seferleri de Silecektir!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Onayla!",
                cancelButtonText: "Vazgeç!",
                reverseButtons: true
            }).then(function (result) {
                if (result.value) {
                    $.ajax({
                        url: '@Url.Action("Delete")/' + id,
                        type: 'GET',
                        success: function (data) {
                            alert(data)
                            if (data) {
                                toastr.success("Silme İşlemi Başarıyla Gerçekleştirildi", "Başarılı");
                                setTimeout(function () {
                                    location.reload(true)
                                },
                                    1500);

                            } else {

                                Swal.fire({
                                    position: 'center',
                                    icon: 'error',
                                    title: "Silme İşlemi Başarısız",
                                    showConfirmButton: true,
                                    text: data.Message,
                                    customClass: {
                                        confirmButton: 'btn btn-primary'
                                    },
                                    buttonsStyling: true
                                });
                            }
                        },
                        error: function (data) {
                            alert(data)
                            if (data.result === false) {
                                Swal.fire({
                                    position: 'center',
                                    icon: 'error',
                                    title: "Silme İşlemi Başarısız",
                                    showConfirmButton: false,
                                    timer: 1500,
                                    customClass: {
                                        confirmButton: 'btn btn-primary'
                                    },
                                    buttonsStyling: false
                                });
                            }


                        }
                    });
                } else if (result.dismiss === "cancel") {
                    Swal.fire(
                        "Vazgeçildi",
                        "Istasyon Silmeden Vazgeçildi",
                        "error"
                    )
                }
            });
        }
    </script>
    <script>
        function Edit(id) {
            $.ajax({
                url: '@Url.Action("Edit")',
                type: 'POST',
                dataType: 'json',
                cache: false,
                async: true,
                data: new FormData(document.getElementById("frmTrainEdit_" + id)),
                processData: false,
                contentType: false,
                success: function (data) { 
                    alert(data)
                    if (data !== null) {
                        toastr.success("Istasyon Güncelleme Başarıyla Gerçekleştirildi", "Başarılı");
                        setTimeout(function () {
                            location.reload(true)
                        },
                            1500);

                    } else {
                        Swal.fire({
                            position: 'center',
                            icon: 'error',
                            title: "Güncelleme Başarısı",
                            showConfirmButton: true,
                            text: "Hata",
                            customClass: {
                                confirmButton: 'btn btn-primary'
                            },
                            buttonsStyling: true
                        });
                    }
                },
                error: function (data) {
                    if (data.result === null) {
                        Swal.fire({
                            position: 'center',
                            icon: 'error',
                            title: "Hata",
                            showConfirmButton: false,
                            timer: 1500,
                            customClass: {
                                confirmButton: 'btn btn-primary'
                            },
                            buttonsStyling: false
                        });
                    }


                }
            });
        }
    </script>

}